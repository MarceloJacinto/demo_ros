<launch>
    
    <param name="use_sim_time" value="true"/>
    
    <!-- Change the location to the directory/name where you want to save your map -->
    <arg name="map_location" default="/home/marcelo/Desktop/map" />
    
    <!-- Run map saver to save the map generated by gmapping to a file -->
    <node pkg="map_server" type="map_saver" name="map_saver" output="screen" args="--occ 90 --free 10 -f $(arg map_location) map:=/map" />
    
</launch>
